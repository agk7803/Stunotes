<form action="/dashboard/add" method="POST" enctype="multipart/form-data" class="position-relative">
  <div class="form-group mb-4 position-absolute" style="left:1px; top:1px; right: 1px;">
    <input type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title" placeholder="Title" required>
  </div>

  <div class="form-group mb-4">
    <textarea required class="form-control pt-5 fs-4" id="body" name="body" placeholder="Take a note..."
      rows="12"></textarea>
  </div>

  <!-- ðŸ“Ž File Upload -->
  <div class="form-group mb-4">
    <label class="form-label fw-semibold">Attach File</label>

    <input type="file" name="media" class="form-control" accept="image/*,application/pdf,video/*" />
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-lg">
      + Add Note
    </button>
  </div>

</form>